{% doc %}
  @prompt
    social
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-links-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.alignment }};
  }

  .ai-social-links__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-social-links__list-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.icon_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
    {% if block.settings.alignment == 'left' %}
      justify-content: flex-start;
    {% elsif block.settings.alignment == 'center' %}
      justify-content: center;
    {% else %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-social-links__item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-social-links__link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    color: {{ block.settings.icon_color }};
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-social-links__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.icon_hover_background }};
    color: {{ block.settings.icon_hover_color }};
    transform: translateY(-2px);
  }

  .ai-social-links__link-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
    fill: currentColor;
  }

  @media screen and (max-width: 749px) {
    .ai-social-links-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-social-links__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-social-links__link-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.85 }}px;
      height: {{ block.settings.icon_size | times: 0.85 }}px;
    }

    .ai-social-links__link-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.icon_size | times: 0.85 }}px * 0.5);
      height: calc({{ block.settings.icon_size | times: 0.85 }}px * 0.5);
    }
  }
{% endstyle %}

<div class="ai-social-links-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-social-links__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <ul class="ai-social-links__list-{{ ai_gen_id }}">
    {% if block.settings.facebook_url != blank %}
      <li class="ai-social-links__item-{{ ai_gen_id }}">
        <a
          href="{{ block.settings.facebook_url }}"
          class="ai-social-links__link-{{ ai_gen_id }}"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>
      </li>
    {% endif %}

    {% if block.settings.instagram_url != blank %}
      <li class="ai-social-links__item-{{ ai_gen_id }}">
