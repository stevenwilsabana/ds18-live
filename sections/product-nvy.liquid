          </span>
          <span class="relative inline-flex overflow-hidden">
            <span id="prequalBackupCTA" class="inline-flex items-center">
              <button type="button" aria-haspopup="dialog" id="shopify-installments-cta" data-testid="shopify-installments-cta" class="text-inherit m-0 cursor-pointer border-0 bg-transparent p-0 font-inherit underline">Check your purchasing power</button>
            </span>
          </span>
        </p>
      </div>
      
    </div>
    <div class="product-nvy__details-features">
      <h3>KEY FEATURES</h3>
      <ul>
        {% for block in section.blocks %}
          <li>
            <img loading="lazy" src="{{ block.settings.imagen | img_url: 'master' }}">
            <p>{{ block.settings.heading }}</p>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    var container = $('.product-nvy__imagen--{{ section.id }}');
    
    container.find('.product-nvy-main--{{ section.id }}').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      dots: false,
      infinite: false,
      autoplay: false,
      asNavFor: container.find('.product-nvy-thumbnail--{{ section.id }}')
    });

    container.find('.product-nvy-thumbnail--{{ section.id }}').slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      infinite: false,
      autoplay: false,
      prevArrow: container.find('.btn-slider-thumbnail-prev--{{ section.id }}'),
      nextArrow: container.find('.btn-slider-thumbnail-next--{{ section.id }}'),
      dots: false,
      asNavFor: container.find('.product-nvy-main--{{ section.id }}'),
      focusOnSelect: true,
      responsive: [
        {
          breakpoint: 1200,
          settings: {
            slidesToShow: 4,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
</script>



{% schema %}
  {
    "name": "Product",
    "class": "product-nvy",
    "tag": "section",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "product"
      },
      {
        "type": "radio",
        "id": "icons_key_feature",
        "label": "Key Features",
        "options": [
          {
            "value": "main_product",
            "label": "Main Product"
          },
          {
            "value": "taps",
            "label": "Taps"
          }
        ],
        "default": "main_product"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      },
      {
        "name": "Feature",
        "type": "feature",
        "settings": [
          {
            "type": "image_picker",
            "id": "imagen",
            "label": "Imagen"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }
        ]
      }
	],
    "presets": [
      {
        "name": "Product NVY",
        "category": "Custom"
      }
    ]
  }
{% endschema %}