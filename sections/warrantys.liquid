{%- if section.blocks.size > 0 -%}
  <div class="warrantypage container" >
  <div class="page-width warranty-content">
    <div class="grid">
      <div class="grid__item medium-up--three-quarters medium-up--push-one-eighth">

        <div class="page-blocks page-blocks--flush" itemscope itemtype="https://schema.org/FAQPage">
          {%- for block in section.blocks -%}
            <div {{ block.shopify_attributes }}>
              {% case block.type %}
                {% when 'rich-text'%}
                  {% render 'page-block-rich-text', section_class: 'index-section--faq', block: block %}

                {% when 'question'%}
                  {% render 'page-warranty-faq', block: block %}

              {% endcase %}
            </div>
          {%- endfor -%}
        </div>

      </div>
    </div>
  </div>
  </div>
{%- endif -%}

<style>
  .warrantypage {
    font-size: 18px;
  }
  .warrantypage .collapsible-trigger {
    font-size: 20px;
    font-weight: bold;
    padding: 24px 50px;
  }
  .warrantypage .collapsible-content .collapsible-content__inner {
    line-height: 30px;
    padding: 30px;
  }
  .warrantypage .collapsible-content .collapsible-content__inner p {
    margin-bottom: 8px;
  }
  .warrantypage .collapsible-trigger__icon {
    right: 30px;
  }
  @media only screen and (max-width: 440px) {
    .warrantypage {
      font-size: 14px;
    }
    .warrantypage .collapsible-trigger {
      font-size: 16px;
      font-weight: bold;
      padding: 14px 20px;
    }
    .warrantypage .collapsible-content .collapsible-content__inner {
      line-height: 22px;
      padding: 10px 20px;
    }
    .warrantypage .collapsible-trigger__icon {
      right: 10px;
    }
    #shopify-section-slideshow-warrantys,
    #Slideshow-slideshow-warrantys{
      height: 200px;
    }
  }
</style>

{% schema %}
  {
    "name": "Page.faq page",
    "settings": [
      {
        "type": "checkbox",
        "id": "page_title_enable",
        "label": "Show page title"
      },
      {
        "type": "checkbox",
        "id": "page_content_enable",
        "label": "Show page content"
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "rich-text",
          "settings": {
            "title": "Shipping policy"
          }
        },
        {
          "type": "question",
          "settings": {
            "title": "Where do you ship to?"
          }
        },
        {
          "type": "question",
          "settings": {
            "title": "How long will my order take?"
          }
        },
        {
          "type": "rich-text",
          "settings": {
            "title": "Returns and exchanges"
          }
        },
        {
          "type": "question",
          "settings": {
            "title": "How do I ship my order back to you?"
          }
        }
      ]
    },
    "blocks": [
      {
        "type": "rich-text",
        "name": "Rich text",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Rich text"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this section for any descriptive text you need to fill out your pages or to add introductory headings between other blocks.</p>"
          },
          {
            "type": "select",
            "id": "align_text",
            "label": "Text alignment",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Centered"
              }
            ]
          }
        ]
      },
      {
        "type": "question",
        "name": "Question",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Question",
            "default": "Frequently asked question"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this text to answer questions in as much detail as possible for your customers.</p>"
          }
        ]
      }
    ]
  }
{% endschema %}
