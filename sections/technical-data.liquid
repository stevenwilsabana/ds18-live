<style>


  .tecnical-data__container .tecnical-data__variants .container-variants,
  .tecnical-data__container .tecnical-data__header .container-manual,
  .tecnical-data__container .tecnical-data__header .container-software{
      display: none;
  }

  .shopify-section.tecnical-data {
    display: flex;
    flex-direction: column;
    align-items: center;
    }

.tecnical-data__container {
    width: 100%;
    margin-bottom: 30px;
    max-width: 1400px;
    margin: auto;
    padding: 0 15px!important;
    border-top: red solid 1px;
    
}

.shopify-section.tecnical-data h3.heading.h3 {
    padding: 20px 0 20px;
}

.tecnical-data__variants {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    height: 340px;
    overflow: hidden;
}

.shopify-section.tecnical-data button.dropdown-technical {
  border: red solid 1px;
  margin-bottom: 20px;
  padding: 10px 20px;
  color: red;
  border-radius: 3px;
  margin-top: 20px;
}

.tecnical-data__variants .container-variants .metafield-rich_text_field {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
}

.tecnical-data__variants .container-variants .metafield-rich_text_field ul {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 25px;
    list-style-type: none;
    width: 100%;
}

.tecnical-data__variants .container-variants .metafield-rich_text_field ul:last-child {
    margin-bottom: 0;
}

.tecnical-data__variants .container-variants .metafield-rich_text_field ul > p {
    color: red;
}

.tecnical-data__variants .container-variants .metafield-rich_text_field ul li {
    margin-bottom: 5px;
  text-align: center;
}


@media only screen and (min-width: 1000px){
    .shopify-section.tecnical-data h3.heading.h3 {
        padding: 50px 0 0px;
    }
    
    .tecnical-data__variants .container-variants .metafield-rich_text_field {
        display: grid;
        grid-gap: 20px;
        gap: 17px;
        grid-auto-flow: column;
        grid-auto-columns: minmax(200px,400px);
        justify-content: center;
        margin-left: 0;
        margin-right: 0;
        align-items: flex-start;
    }

    .shopify-section.tecnical-data button.dropdown-technical {
      margin-bottom: 50px;
    }

}

