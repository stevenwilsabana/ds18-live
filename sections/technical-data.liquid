  .tecnical-data__header{
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .tecnical-data__header .container-downloads {
    margin: 0;
    padding: 50px 0 30px;
  }


    .tecnical-data__header .container-downloads .container-manual,
    .tecnical-data__header .container-downloads .container-software {
       margin: 10px 0;
    }

    
}
  
</style>


{% assign TechnicalData = false %}
{% for variant in product.variants %}
  {% if variant.metafields.custom.technical_data %}
    {% assign TechnicalData = true %}
  {% endif %}
{% endfor %}


{% assign UserManual = false %}
{% for variant in product.variants %}
  {% if variant.metafields.custom.user_manual %}
    {% assign UserManual = true %}
  {% endif %}
{% endfor %}


{% assign SoftwareUpdates = false %}
{% for variant in product.variants %}
  {% if variant.metafields.custom.software_updates %}
    {% assign SoftwareUpdates = true %}
  {% endif %}
{% endfor %}




{% if TechnicalData == true %}

  <div class="tecnical-data__container">

    <div class="tecnical-data__header">
      <h3 class="heading h3"><span class="red">TECHNICAL</span> DATA</h3>

      <div class="container-downloads">

      {% if SoftwareUpdates == true %}

        {% for variant in product.variants %}
  
          {% if variant.metafields.custom.software_updates %}
  
            <div class="container-downloads-global container-software" data-selector-variant="{{ variant.id }}">
              <a href="{{ variant.metafields.custom.software_updates.value.url }}" target="_blank">
                <h4 class="heading h2 resto">
                  <i class="fa-solid fa-download"></i>
                  SOFTWARE UPDATES
                </h4>
              </a>
            </div>

          {% endif %}
        
        {% endfor %}

      {% endif %}




        
      {% if UserManual == true %}

        {% for variant in product.variants %}
  
          {% if variant.metafields.custom.user_manual %}
  
            <div class="container-downloads-global container-manual" data-selector-variant="{{ variant.id }}">
              <a href="{{ variant.metafields.custom.user_manual.value.url }}" target="_blank">
                <h4 class="heading h2 resto">
                  <i class="fa-solid fa-download"></i>
                  DOWNLOAD THE USER MANUAL
                </h4>
              </a>
            </div>

          {% endif %}
        
        {% endfor %}

      {% endif %}
      </div>

    </div>

    <div class="tecnical-data__variants">

      {% for variant in product.variants %}
  
        {% if variant.metafields.custom.technical_data %}

          <div class="container-variants" data-selector-variant="{{ variant.id }}">
            {{ variant.metafields.custom.technical_data | metafield_tag }}
          </div>
      
        {% endif %}
      
      {% endfor %}
      
    </div>
    
  </div>

  <button class="dropdown-technical dropdown-technical--active">Load More</button>
  
{% endif %}

<script>

  function $changeTechdata(id){
    var selectorTechData = '.tecnical-data__container .tecnical-data__variants .container-variants[data-selector-variant="' + id + '"]';
    var selectorManual = '.tecnical-data__container .tecnical-data__header .container-manual[data-selector-variant="' + id + '"]';
    var selectorSoftware = '.tecnical-data__container .tecnical-data__header .container-software[data-selector-variant="' + id + '"]';
    $('.tecnical-data__container .tecnical-data__variants .container-variants').hide();
    $('.tecnical-data__container .tecnical-data__header .container-manual').hide();
    $('.tecnical-data__container .tecnical-data__header .container-software').hide();
    $(selectorTechData).css('display','flex');
    $(selectorManual).css('display','flex');
    $(selectorSoftware).css('display','flex');
  };

  $( document ).ready(function() {
    $('.tecnical-data__variants .container-variants .metafield-rich_text_field > p').each(function(){
      var list = $(this).next( "ul" );
      $(list).prepend( $(this) );
    });
    
    var id = $('.product-form__buy-buttons > form > input[name="id"]').val();
    $changeTechdata(id);

    $(document).on('click','button.dropdown-technical--active',function(){
      $(".tecnical-data__container .tecnical-data__variants").css('height','auto');
      $(this).text('Show Less');
      $(this).removeClass('dropdown-technical--active');
      $(this).addClass('dropdown-technical--desactive');
    });

    $(document).on('click','button.dropdown-technical--desactive',function(){
      $(this).text('Load More');
      $(this).removeClass('dropdown-technical--desactive');
      $(this).addClass('dropdown-technical--active');
      $(".tecnical-data__container .tecnical-data__variants").css('height','340px');
    });
    
  });

  $('.product-form__buy-buttons > form > input[name="id"]').on('change', function() {
    var id = $(this).val();
    $changeTechdata(id);
  });

  
</script>


