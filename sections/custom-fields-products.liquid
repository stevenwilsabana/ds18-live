{% render "blocks.custom_fields" with resource_type: "products", blocks: section.blocks %}
{% schema %}
  {
    "name": {
        "en": "Custom Fields"
    },
    "settings": [
        {
            "type": "paragraph",
            "content": "[View Documentation](https:\/\/custom-fields.docs.bonify.io\/)"
        },
        {
            "type": "paragraph",
            "content": "[Edit Custom Fields](https:\/\/customfields.bonify.io\/dashboard\/ds18caraudio.myshopify.com\/products\/configure)"
        }
    ],
    "templates": [
        "product"
    ],
    "presets": [
        {
            "name": "Custom Fields",
            "blocks": []
        }
    ],
    "blocks": [
        {
            "type": "cf_w_cols2",
            "name": {
                "en": "Columns "
            },
            "settings": [
                {
                    "type": "select",
                    "id": "key",
                    "label": "Select a Widget",
                    "options": [
                        {
                            "value": "custom_fields.dyno_results",
                            "label": "Dyno Results"
                        }
                    ]
                },
                {
                    "type": "header",
                    "content": "Section Title"
                },
                {
                    "id": "section_title_text",
                    "type": "text",
                    "label": "Section Title"
                },
                {
                    "id": "section_title_tag",
                    "type": "select",
                    "label": "Tag",
                    "default": "h2",
                    "options": [
                        {
                            "value": "h1",
                            "label": "<h1>"
                        },
                        {
                            "value": "h2",
                            "label": "<h2>"
                        },
                        {
                            "value": "h3",
                            "label": "<h3>"
                        },
                        {
                            "value": "h4",
                            "label": "<h4>"
                        },
                        {
                            "value": "h5",
                            "label": "<h5>"
                        },
                        {
                            "value": "h6",
                            "label": "<h6>"
                        },
                        {
                            "value": "div",
                            "label": "<div>"
                        },
                        {
                            "value": "span",
                            "label": "<span>"
                        }
                    ]
                },
                {
                    "id": "section_title_margin_bottom",
                    "label": "Bottom Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 1
                },
                {
                    "id": "section_title_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "type": "header",
                    "content": "Layout"
                },
                {
                    "id": "cols",
                    "type": "select",
                    "label": "Width",
                    "default": "12",
                    "options": [
                        {
                            "value": "4",
                            "label": "1\/3"
                        },
                        {
                            "value": "6",
                            "label": "1\/2"
                        },
                        {
                            "value": "8",
                            "label": "2\/3"
                        },
                        {
                            "value": "12",
                            "label": "Full width"
                        }
                    ]
                },
                {
                    "id": "margin_top",
                    "label": "Top Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 5
                },
                {
                    "id": "margin_bottom",
                    "label": "Bottom Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 5
                },
                {
                    "id": "block_bg_color",
                    "label": "Background Color",
                    "type": "color"
                },
                {
                    "type": "header",
                    "content": "Widget Settings"
                },
                {
                    "id": "widget_grid_width",
                    "label": "Grid Size",
                    "type": "range",
                    "min": 2,
                    "max": 6,
                    "default": 3
                },
                {
                    "id": "widget_mobile_grid_width",
                    "label": "Mobile Grid Columns",
                    "type": "range",
                    "min": 1,
                    "max": 6,
                    "default": 1
                },
                {
                    "type": "header",
                    "content": "Column Settings"
                },
                {
                    "id": "column_gutter",
                    "label": "Gutter Width",
                    "type": "range",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "px",
                    "default": 40
                },
                {
                    "id": "text_center",
                    "label": "Center align text",
                    "type": "checkbox",
                    "default": true
                },
                {
                    "id": "card_bg_color",
                    "type": "color",
                    "label": "Background Color"
                },
                {
                    "id": "card_border",
                    "type": "text",
                    "label": "Border",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/border-outline\/)"
                },
                {
                    "id": "card_border_radius",
                    "type": "text",
                    "label": "Border Radius",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/border-radius\/)"
                },
                {
                    "id": "card_box_shadow",
                    "type": "text",
                    "label": "Box Shadow",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/box-shadow\/)"
                },
                {
                    "type": "header",
                    "content": "Image Size"
                },
                {
                    "id": "image_ratio",
                    "type": "select",
                    "label": "Aspect Ratio",
                    "options": [
                        {
                            "value": "",
                            "label": "None"
                        },
                        {
                            "value": "landscape",
                            "label": "Landscape"
                        },
                        {
                            "value": "portrait",
                            "label": "Portrait"
                        },
                        {
                            "value": "square",
                            "label": "Square"
                        }
                    ],
                    "default": "square"
                },
                {
                    "id": "image_size",
                    "type": "select",
                    "label": "Size",
                    "options": [
                        {
                            "value": "",
                            "label": "Full-Width"
                        },
                        {
                            "value": "large",
                            "label": "Large"
                        },
                        {
                            "value": "medium",
                            "label": "Medium"
                        },
                        {
                            "value": "small",
                            "label": "Small"
                        }
                    ],
                    "default": "medium"
                },
                {
                    "type": "header",
                    "content": "Image Settings"
                },
                {
                    "id": "image_border",
                    "type": "text",
                    "label": "Border",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/border-outline\/)",
                    "default": "5px solid white"
                },
                {
                    "id": "image_border_radius",
                    "type": "text",
                    "label": "Border Radius",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/border-radius\/)",
                    "default": "10px"
                },
                {
                    "id": "image_box_shadow",
                    "type": "text",
                    "label": "Box Shadow",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/box-shadow\/)",
                    "default": "2px 2px 25px rgba(0,0,0,0.25)"
                },
                {
                    "type": "header",
                    "content": "Title Settings"
                },
                {
                    "id": "title_font_size",
                    "type": "range",
                    "min": 8,
                    "max": 60,
                    "step": 1,
                    "unit": "px",
                    "label": "Font size",
                    "default": 24
                },
                {
                    "id": "title_line_height",
                    "type": "range",
                    "min": 0.5,
                    "max": 10,
                    "step": 0.1,
                    "unit": "em",
                    "label": "Line Height",
                    "default": 1.5
                },
                {
                    "id": "title_font_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "id": "title_font_custom",
                    "label": "Customize the title font",
                    "type": "checkbox",
                    "default": false
                },
                {
                    "id": "title_font",
                    "type": "font_picker",
                    "label": "Custom Title Font",
                    "default": "helvetica_n4"
                },
                {
                    "id": "title_margin_top",
                    "label": "Margin Top",
                    "type": "range",
                    "min": 0,
                    "max": 10,
                    "step": 0.5,
                    "unit": "rem",
                    "default": 2
                },
                {
                    "id": "title_margin_bottom",
                    "label": "Margin Bottom",
                    "type": "range",
                    "min": 0,
                    "max": 10,
                    "step": 0.5,
                    "unit": "rem",
                    "default": 2.5
                },
                {
                    "type": "header",
                    "content": "Body Settings"
                },
                {
                    "id": "body_font_size",
                    "type": "range",
                    "min": 8,
                    "max": 60,
                    "step": 1,
                    "unit": "px",
                    "label": "Font size",
                    "default": 16
                },
                {
                    "id": "body_font_color",
                    "type": "color",
                    "label": "Font Color"
                }
            ]
        }
    ]
}
{% endschema %}
