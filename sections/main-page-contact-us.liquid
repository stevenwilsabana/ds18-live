{{ 'contact-us.css' | asset_url | stylesheet_tag }}

<div class="header-title">
  <h1>{{ page.title }}</h1>
</div>

<div class="main-page-contact-us__container">
  <div class="contact-us__directions">
    <div class="item-contact-us item-contact-us--addres">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Address</h3>
        </div>
        <div class="item-contact-us__content">
          <p>3580 SW 20th Street</p>
          <p>Pembroke Park, FL 33023</p>
        </div>
      </div>
    </div>

    <div class="item-contact-us item-contact-us--call-center">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Call Center (24/7 Hotline)</h3>
        </div>
        <div class="item-contact-us__content">
          <button class="button-global" id="open-phone-hotline">
            {% render 'icon-cu-phone' %}
            <span>+1 (954) 924-1213</span>
          </button>
          <a href="tel:+19549241213" id="phone-link-hotline" style="display:none;">Call Us</a>
        </div>
      </div>
    </div>


    <div class="item-contact-us item-contact-us--faqs">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Help & FAQs</h3>
        </div>
        <div class="item-contact-us__content">
          <button class="button-global" id="open-navigation-faqs">
            {% render 'icon-cu-navigation' %}
            <span>Visit FAQs</span>
          </button>
        </div>
      </div>
    </div>





      
  </div>
  <div class="contact-us__general">
    
    <div class="item-contact-us item-contact-us--support">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Technical Support</h3>
          <p>Need technical support with our products?</p>
        </div>
        <div class="item-contact-us__content">

          <button class="button-global" id="open-navigation-support">
            {% render 'icon-cu-navigation' %}
            <span>Online Process</span>
          </button>
          
          <button class="button-global" id="open-phone-support">
            {% render 'icon-cu-phone' %}
            <span>+1 (305) 928-8734</span>
          </button>
          <a href="tel:+13059288734" id="phone-link-support" style="display:none;">Call Us</a>

          <button class="button-global" id="open-email-support">
            {% render 'icon-cu-email' %}
            <span>Send Email</span>
          </button>

          <button class="button-global" onclick="GorgiasChat.open();">
            {% render 'icon-cu-chat' %}
            <span>Let's Chat!</span>
          </button>
          
        </div>
      </div>
    </div>
    
    <div class="item-contact-us item-contact-us--returns">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Returns & Exchanges</h3>
          <p>Do you need to return or exchange one of our products?</p>
        </div>
        <div class="item-contact-us__content">

          <button class="button-global" id="open-navigation-return-retail">
            {% render 'icon-cu-navigation' %}
            <span>Online Process</span>
          </button>
          
          <button class="button-global" id="open-phone-return-retail">
            {% render 'icon-cu-phone' %}
            <span>+1 (305) 928-8734</span>
          </button>
          <a href="tel:+13059288734" id="phone-link-return-retail" style="display:none;">Call Us</a>

          <button class="button-global" id="open-email-return-retail">
            {% render 'icon-cu-email' %}
            <span>Send Email</span>
          </button>

          <button class="button-global" onclick="GorgiasChat.open();">
            {% render 'icon-cu-chat' %}
            <span>Let's Chat!</span>
          </button>

        </div>


        <div class="item-contact-us__header item-contact-us__header--subheading">
          <p>Returns and Exchanges for Dealers:</p>
        </div>
        <div class="item-contact-us__content">

          <button class="button-global" id="open-phone-return-dealer">
            {% render 'icon-cu-phone' %}
            <span>+1 (305) 239-5672</span>
          </button>
          <a href="tel:+13052395672" id="phone-link-return-dealer" style="display:none;">Call Us</a>

          <button class="button-global" id="open-email-return-dealer">
            {% render 'icon-cu-email' %}
            <span>Send Email</span>
          </button>

          <button class="button-global" onclick="GorgiasChat.open();">
            {% render 'icon-cu-chat' %}
            <span>Let's Chat!</span>
          </button>
        </div>

        
      </div>
    </div>

    <div class="item-contact-us item-contact-us--accounting">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Accounting</h3>
          <p>Do you need accounting information?</p>
        </div>
        <div class="item-contact-us__content">

          <button class="button-global" id="open-phone-accounting">
            {% render 'icon-cu-phone' %}
            <span>+1 (305) 928-8734</span>
          </button>
          <a href="tel:+13059288734" id="phone-link-accounting" style="display:none;">Call Us</a>

          <button class="button-global" id="open-email-accounting">
            {% render 'icon-cu-email' %}
            <span>Send Email</span>
          </button>

          <button class="button-global" onclick="GorgiasChat.open();">
            {% render 'icon-cu-chat' %}
            <span>Let's Chat!</span>
          </button>
          
        </div>
      </div>
    </div>

    <div class="item-contact-us item-contact-us--sales">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Sales</h3>
          <p>Need help with your purchase?</p>
        </div>
        <div class="item-contact-us__content">

          <button class="button-global" id="open-phone-sales">
            {% render 'icon-cu-phone' %}
            <span>+1 (305) 928-8734</span>
          </button>
          <a href="tel:+13059288734" id="phone-link-sales" style="display:none;">Call Us</a>

          <button class="button-global" id="open-email-sales">
            {% render 'icon-cu-email' %}
            <span>Send Email</span>
          </button>

          <button class="button-global" onclick="GorgiasChat.open();">
            {% render 'icon-cu-chat' %}
            <span>Let's Chat!</span>
          </button>
          
        </div>
      </div>
    </div>

    <div class="item-contact-us item-contact-us--dealer">
      <div class="item-contact-us__container">
        <div class="item-contact-us__header">
          <h3>Become a Dealer</h3>
          <p>Would you like to sell our products?</p>
        </div>
        <div class="item-contact-us__content">
          <button class="button-global" id="open-navigation-dealer">
            {% render 'icon-cu-navigation' %}
            <span>Online Process</span>
          </button>
        </div>
      </div>
    </div>

  </div>
</div>

