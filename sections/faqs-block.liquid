{%- if section.blocks.size > 0 -%}
  {% assign tabName = section.settings.heading | downcase | replace: ' ', '' %}
  <div id="tab-{{ tabName }}" style="display:none;" class="tab-container tab-{{ tabName }}">
    <div class="page-width page-content" style="border:0; margin-top: 0 !important; margin-bottom: 0 !important;">
      <div class="grid">
        <div class="grid__item medium-up--three-quarters medium-up--push-one-eighth head">

          {% if request.path contains '/pages/faq-nvy' %}
            <h5 class="heading">{{ section.settings.heading }}</h5>
          {% endif %}
          
          <div class="page-blocks page-blocks--flush" itemscope itemtype="https://schema.org/FAQPage">
            {%- for block in section.blocks -%}
              <div {{ block.shopify_attributes }}>
                {% render 'page-block-faq', block: block %}
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "FAQs Block",
  "class": "faqs-block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "name": "FAQ Question/Answer",
      "type": "faq_block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs Block",
      "category": "Content"
    }
  ]
}
{% endschema %}

