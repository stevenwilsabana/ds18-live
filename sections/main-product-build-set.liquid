    $('.image-zoom-product-page')
    .wrap('<span style="display:inline-block"></span>')
    .css('display', 'block')
    .parent()
    .zoom({
      url: $(this).find('img').attr('data-zoom')
    });
  };

  function checkScreenWidth() {
    if ($(window).width() > 1200) {
      zoomProduct();
    };
  };

  checkScreenWidth();

  $(window).resize(function() {
    checkScreenWidth();
  });


