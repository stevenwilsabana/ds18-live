          {%- assign product_5 = block.settings.product_5 -%}
          {%- assign product_6 = block.settings.product_6 -%}
          {%- assign product_7 = block.settings.product_7 -%}
          {%- assign product_8 = block.settings.product_8 -%}
          {%- assign product_9 = block.settings.product_9 -%}
          {%- assign product_10 = block.settings.product_10 -%}
          {%- assign product_11 = block.settings.product_11 -%}
