    let $item = $(this).parents('.product-stl');
    let imagen = $item.find('.product-stl__slider .container-images .product-stl__image[data-selector="1"] img').attr('src');
    let sku = $item.find('.product-stl__details .vendor').text();
    let title = $item.find('.product-stl__details .title').text();
    $('#modal-notify-me .information img').attr('src',imagen);
    $('#modal-notify-me .information h5').text(sku);
    $('#modal-notify-me .information h3').text(title);
  });
</script>

<!-- SCRIPT VARIANTS CHANGES -->
<script>

  function initializeSlider(sliderContainer) {
    let newSlider = sliderContainer.find('.product-stl__slider .container-images');
    let prevArrow = sliderContainer.find('.product-stl__slider .back-arrow');
    let nextArrow = sliderContainer.find('.product-stl__slider .next-arrow');
    if (newSlider.length) {
      newSlider.slick({
        infinite: false,
        arrows: true,
        slidesToShow: 1,
        slidesToScroll: 1,
        prevArrow: prevArrow,
        nextArrow: nextArrow,
        dots: true
      });

      prevArrow.on('click', function() {
        newSlider.slick('slickPrev');
      });
      
      nextArrow.on('click', function() {
        newSlider.slick('slickNext');
      });
      
    } else {
        console.error('No se encontró el contenedor del slider en el nuevo contenido.');
    }
  }


  $(document).on("click", ".shop-the-look-variants .variants button.label-variant", function () {
    let item = $(this).parents('.product-stl');
    let templates = item.next('.shop-the-look-templates');
    let templateId = $(this).data('href');
    let templateElement = templates.find(`template#${templateId}`);
    let templateContent = templateElement.html();
    if (templateContent) {
      item.html(templateContent);
      initializeSlider(item);
    } else {
      console.error(`No se encontró el template con el ID: ${templateId}`);
    }
  });
  
</script>


