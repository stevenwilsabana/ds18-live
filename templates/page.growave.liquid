{% if page.handle == 'reward' %}
  {{ 'style-rewards-program.css' | asset_url | stylesheet_tag }}
  
  <a href="https://www.ds18.com/account/login" target="_blank" style="display: none;" id="link-button-href-account-mobile"></a>
  
  <div id="loader-account-login-growave" style="display: none;">
    <div>
      <div class="icon-loader"></div>
      <p class="title">Loading, please wait...</p>
      <p class="message">Weâ€™re redirecting you to a new window to log in or sign up. Come back here once you're done.</p>
    </div>
