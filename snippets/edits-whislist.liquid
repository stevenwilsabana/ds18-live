              // Desconectar el observer del shadow-root una vez aplicados los estilos
              innerObserver.disconnect();
          });
  
          // Observar cambios dentro del shadow-root
          innerObserver.observe(targetElement.shadowRoot, { childList: true, subtree: true });
  
          // Desconectar el observer principal, ya que encontramos el shadow-root
          observer.disconnect();
      }
  });
  
  // Observar el `document.body` en busca de `.gw-wl-page-placeholder`
