{% if product.metafields["custom_fields"]["key_features"] != blank %}
  <div class="custom-field custom-field__key-features custom-field__type--field-collection-json">
    <h3 class="custom-field--title">Key Features</h3>
    <div class="custom-field--value">
      {% for item in product.metafields["custom_fields"]["key_features"] %}
        <div class="fc-item fc-index--{{ forloop.index0 }}">
           {% if item["label"] != blank %}
             <div class="fc-field field__label field-type--text">
               <h4 class="custom-field--title">Label</h4>
               <div class="custom-field--value">
                 {{ item["label"] }}
               </div>
             </div>
           {% endif %}
           {% if item["icon"] != blank %}
             <div class="fc-field field__icon field-type--text">
               <h4 class="custom-field--title">Icon</h4>
               <div class="custom-field--value">
                 {{ item["icon"] }}
               </div>
             </div>
           {% endif %}
         </div>
       {% endfor %}
    </div>
  </div>
{% endif %}