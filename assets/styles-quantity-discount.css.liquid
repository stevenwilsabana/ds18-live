/* SE OCULTAN CANTIDADES EN LA SECCIÓN PRINCIPAL */

.product-form__quantity {
    display: none!important;
}
.quantity-buy-container.container-uniq-form-ds .product-form__buy-buttons {
    width: 100%!important;
}



/* ESTILOS GLOBALES PARA NUEVA SECCIÓN DE CANTIDAD */

section.quantity-discount {
    width: 100%;
    margin-bottom: 15px;
}

section.quantity-discount .quantity-discount__container {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    align-items: stretch;
    height: auto;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item {
    width: calc(50% - 7.5px);
    height: auto;
    display: flex;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item > input {
    display: none;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label {
    border: #dddddd solid 1px;
    outline: transparent solid 1px;
    display: flex;
    height: auto;
    align-items: stretch;
    width: 100%;
    padding: 15px;
    border-radius: 5px;
    min-height: 175px;
    cursor: pointer;
    transition: all .3s;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label p {
    margin: 0;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__label {
    width: 100%;
    display: flex;
    flex-direction: column;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__heading {
    display: flex;
    gap: 10px;
    align-items: center;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__heading .radio-select {
    border: #000000 solid 2px;
    width: 20px;
    height: 20px;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3px;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__heading p {
    color: black;
    font-size: 15px!important;
    font-weight: 600!important;
    
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__heading .radio-select .radio-select__checked {
    width: 100%;
    height: 100%;
    border-radius: 100%;
    display: none;
    background: #000000;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item input:checked + label {
    border-color: black;
    outline-color: black;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item input:checked + label .radio-select__checked {
    display: flex!important;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details {
    margin-top: auto;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > p.discount-global {
    font-size: 13px!important;
    font-weight: 400!important;
    margin-top: 5px;
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    line-height: 18px!important;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > p.prices {
    display: flex;
    flex-wrap: wrap;
    gap: 0px 8px;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > p.prices span {
    font-size: 14px;
    font-weight: 400;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > p.prices span.regular {
    opacity: 0.5;
    position: relative;
    font-weight: 300;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > p.prices span.offert {
    color: #008000;
    font-weight: 600;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > p.prices span.regular:after {
    content: "";
    display: flex;
    width: 100%;
    height: 100%;
    width: 100%;
    background: black;
    position: absolute;
    top: 50%;
    height: 1px;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > p.prices span.discount {
    display: none;
}

