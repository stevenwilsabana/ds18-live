section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > .quantity-control {
    display: inline-flex;
    width: auto;
    margin-bottom: 15px;
    border-radius: 5px;
    background: #f7f7f7;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > .quantity-control button.quantity-btn {
    width: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 15px;
    line-height: 15px;
    padding: 0;
    margin: 0;
    cursor: pointer;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > .quantity-control button.quantity-btn[disabled]{
    opacity: 0.1;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > .quantity-control input {
    border: 0;
    margin: 0;
    padding: 0;
    width: 45px;
    text-align: center;
    font-size: 13px;
    padding: 5px;
    background: transparent;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > .quantity-control input::-webkit-outer-spin-button,
section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > .quantity-control input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

section.quantity-discount .quantity-discount__container .quantity-discount__item label .quantity-discount__details > .quantity-control input {
  -moz-appearance: textfield;
}


@media only screen and (min-width: 1200px){
    section.quantity-discount .quantity-discount__container .quantity-discount__item {
        flex: 1 1 calc(25% - 15px);
    }

    section.quantity-discount .quantity-discount__container .quantity-discount__item label:hover {
        outline-color: #dddddd;
    }
}



