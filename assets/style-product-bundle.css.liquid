    .color-swatch__radio[value="Black"] + .color-swatch__item .img-variant{
        background-image: url(https://cdn.shopify.com/s/files/1/0018/0142/0861/files/amp-black-bundle_80x.png);
    }
    
    .color-swatch__radio[value="Red"] + .color-swatch__item .img-variant{
        background-image: url(https://cdn.shopify.com/s/files/1/0018/0142/0861/files/amp-red-bundle_80x.png);
    }
    
    
    .color-swatch__radio[value="4 pro-x6.4bm"] + .color-swatch__item .img-variant{
        background-image: url(https://cdn.shopify.com/s/files/1/0018/0142/0861/files/spaeaker-64_80x.png);
    }
    
    .color-swatch__radio[value="4 pro-x8.4bm"] + .color-swatch__item .img-variant{
