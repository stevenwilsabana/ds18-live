    }

    .product__info {
        width: 40%
    }

    .active-zoom_product-page span{
        width: 100%;
    }
    
    .active-zoom_product-page img.image-zoom-product-page {
        width: 100%;
    }

     .product__info_continer .product-form__custom-liquid {
        text-align: center;
        width: 100%;
    }

    .purchase-summary__container > .summary-additional .summary-additional__row p:nth-child(2) {
        display: block;
    }

    .purchase-summary__container > div p b {
        display: none;
    }

    .purchase-summary__container > div p {
        width: 33.33333%!important;
    }

    .purchase-summary__container > .summary-tub p:last-child,
    .purchase-summary__container > .summary-total-general p:last-child,
    .purchase-summary__container > .summary-additional .summary-additional__row p:last-child,
    .purchase-summary__container > .summary-total-general p,
