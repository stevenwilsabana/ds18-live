        text-align: right;
        padding-right: 20px;
    }

    .purchase-summary__container > div p:first-child {
        padding-left: 20px;
        font-weight: bold!important;
    }

    .tag-up-label {
        background: red;
        color: white;
        font-weight: bold;
    }

    .summary-total-general--continer-line__total-tub {
        justify-content: flex-end
    }

    .summary-total-general--continer-line__total-tub p:first-child {
        text-align: center;
    }

    product-media.product__media.became-visible {
        position: sticky;
        top: 200px;
    }
}






/* Estilos PPRL */


.shopify-block.shopify-app-block .product-personalizer {
    margin: 0!important;
}

.pplr-wrapper{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
}

.pplr-wrapper > label {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    font-weight: bold;
    color: red;
}

.pplr-wrapper > .container-variants-pprl {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5px;
}

.pplr-wrapper > .container-variants-pprl .pplr-drop-item {
    width: 90px;
    height: 100px;
    background: transparent!important;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 8px 5px 5px;
    border: #ededed solid 2px;
    border-radius: 6px;
    font-size: 10px;
    font-weight: bold;
    margin: 5px;
    float: unset;
}

.pplr-wrapper > .container-variants-pprl .pplr-drop-item.active {
    border-color: red;
}

.pplr-wrapper > .container-variants-pprl .pplr-drop-item img {
    width: 60px;
    height: 60px;
    margin-bottom: 5px;
    object-fit: cover;
}

@media only screen and (min-width: 1000px){
    .pplr-wrapper {
      align-items: flex-start;
        margin-bottom: 30px;
    }

    .pplr-wrapper > label {
      justify-content: flex-start
    }

    .pplr-wrapper > .container-variants-pprl .pplr-drop-item {
        width: 110px;
        height: 115px;
    }
    
    
    .pplr-wrapper > .container-variants-pprl .pplr-drop-item img {
        width: 80px;
        height: 80px;
    }

    .pplr-wrapper > .container-variants-pprl {
        padding: 5px 0;
    }

    .pplr-wrapper > .container-variants-pprl .pplr-drop-item:first-child {
        margin-left: 0;
    }

    .pplr-wrapper > .container-variants-pprl .pplr-drop-item:last-child {
        margin-right: 0;
    }
}


