product-item.product-item .cta-buttons-eject {
    gap: 10px;
    display: flex;
    width: 100%;
    flex-direction: column;
}

product-item.product-item .cta-buttons-eject .number-input {
    max-width: 100%;
    width: 100%;
    justify-content: space-between;
}

product-item.product-item .cta-buttons-eject .number-input button {
    width: 25px;
    font-size: 13px;
    line-height: 13px;
}

product-item.product-item .cta-buttons-eject .number-input input {
    width: 20px;
}

product-item.product-item .cta-buttons-eject button.btn {
    max-width: 100%;
}

@media only screen and (min-width: 768px){
    product-item.product-item .cta-buttons-eject {
        gap: 10px;
        flex-direction: row;
        display: flex;
    }
    
    product-item.product-item .cta-buttons-eject .number-input {
        max-width: 90px;
        height: 100%;
    }
    
    product-item.product-item .cta-buttons-eject .number-input button {
        width: 25px;
    }
    
    product-item.product-item .cta-buttons-eject .number-input input {
        width: 40px;
    }
    
    product-item.product-item .cta-buttons-eject button.btn {
        max-width: calc(100% - 100px)!important
    }
}

@media only screen and (max-width: 500px){
    product-item.product-item .cta-buttons-eject .number-input {
        min-height: 36.42px;
    }

}






