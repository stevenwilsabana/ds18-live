/* ESTILOS PRODUCT GRID DE 4 EN MOBILE */

.product-list__inner.product-list__inner--scroller product-item.product-item  {
    padding: 0px;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product {
    border: 1px solid #f5f5f5;
    padding: 10px 10px 15px;
    border-radius: 5px;
    display: flex;
    height: 100%;
    align-items: center;
    flex-direction: column;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__image-wrapper {
    width: 100%;
    margin-bottom: 0;
    position: unset;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__info {
    width: 100%;
    padding: 0px;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__info .product-item-meta {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    height: 100%;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__info .product-item-meta .jdgm-widget {
    margin: 5px 0 0;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__info .product-item-meta .product-item-meta__title {
    text-align: left;
    margin-top: 8px;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__info .product-item-meta .product-item-meta__price-list-container {
    margin-bottom: 15px;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product section.container-variant {
    justify-content: flex-start;
    align-items: flex-start;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product p.container-variant__label {
    text-align: left;
    font-size: 13px!important;!importan;!importa;!import;!impor;!impo;!imp;!im;!i;!;
    color: black;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .container-variant__content {
    width: 100%;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 8px;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__info .color-swatch-list--mini {
    margin: 10px 0;
    width: 100%;
    justify-content: flex-start;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .cta-buttons-eject {
    margin-top: auto;
}

.product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .container-variant__content .label-variant.label-variant--select {
    border: black solid 1px!important;
}

@media only screen and (min-width: 500px){

    .product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__image-wrapper {
        width: 100%;
        margin-bottom: 10px;
    }

    .product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__info {
        width: 100%;
        padding: 0;
    }

     .product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .product-item__info .product-item-meta .product-item-meta__price-list-container {
        margin-bottom: 20px;
    }
   
}

@media only screen and (min-width: 768px){
     .product-list__inner.product-list__inner--scroller product-item.product-item .cta-buttons-eject {
        width: 100%;
    }

     .product-list__inner.product-list__inner--scroller product-item.product-item .cta-buttons-eject button.btn {
        max-width: 100%;
    }

     .product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product .variants-metafiels {
        margin-bottom: 15px;
    }

    .product-list__inner.product-list__inner--scroller product-item.product-item .product-item__general-product {
        padding: 15px 15px 20px;
    }

    .shopify-section.shopify-section--product-recommendations product-recommendations.section .section__header h3.heading.h3 {
        margin-bottom: 30px!important;
    }
}







