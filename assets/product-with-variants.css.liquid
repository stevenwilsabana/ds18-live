.load-variants-general__container {
    display: none!important;
}

product-variants.product-form__variants {
    display: block!important;
}

label.color-swatch__item {
    width: auto;
    height: auto;
    border-radius: 3px;
    padding: 3px 10px;
    border: #f0f0f0 solid 2px;
    background: white;
    overflow: hidden;
}

label.color-swatch__item span {
    color: black;
    display: block;
    position: relative!important;
    width: auto;
    height: auto;
    overflow: unset;
}

.color-swatch-list {
    display: flex;
    margin-bottom: 20px;
    flex-wrap: wrap
}

input.color-swatch__radio:checked + label {
    border-color: black;
}