div#shopify-section-header-nvy {
    position: sticky;
    top: 0;
    box-shadow: 0px 5px 5px 0px #00000012;
}

div#shopify-section-header-nvy store-header.header {
    background: white;
    color: black;
    font-family: Montserrat, serif !important;
}

[dir=ltr] .header__linklist-item:not(:last-child) {
    margin-right: 60px;
}


div#shopify-section-header-nvy store-header.header .header__cart-count {
    background: black;
    color: white;
}

div#shopify-section-header-nvy store-header.header .container {
    padding-left: var(--container-gutter);
    padding-right: var(--container-gutter);
    padding-top: 20px;
    padding-bottom: 20px;
}

mobile-navigation#mobile-menu-drawer .features-items-navigation,
.features-items-navigation.features-items-navigation--desktop,
section#shopify-section-rewards,
.header__icon-list [aria-controls="search-drawer"],
.header__icon-list [aria-controls="newsletter-popup"],
a.header__icon-wrapper.tap-area.header__icon-wrapper--rewards {
    display: none!important;
}

ul.mobile-nav.list--unstyled button,
ul.mobile-nav.list--unstyled a {
    font-family: Montserrat, serif !important;   
}

.nvy-open-search {
    position: absolute;
    margin: 0 auto;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999;
}
.nvy-open-search.hidden {
    display: none;
}
.nvy-open-search form {
    width: 100%;
    max-width: 500px;
    position: relative;
}
.nvy-open-search input {
    width: 100%;
    padding: 13px 10px;
    border: 1px solid #000;
    border-radius: 4px;
    font-weight: 600;
    font-size: 15px;
}
.nvy-open-search form svg {
    color: #fff;
}
.nvy-open-search svg.icon--close  {
    position: absolute;
    right: 20px;
    top: 20px;
    cursor: pointer;
    pointer-events: unset;
}
.nvy-header-search-icon {
    cursor: pointer;
}
.nvy-open-search__icon {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    height: 100%;
    display: flex;
    align-items: center;
    padding: 15px;
    background: #000;
    border: 1px solid #000;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    cursor: pointer;
}
  

@media only screen and (min-width: 768px) {
    div#shopify-section-header-nvy store-header.header .container {
        padding-top: 0px;
        padding-bottom: 0px;
    }
}

@media only screen and (max-width: 900px) {
    .nvy-open-search form {
        max-width: 80%;
    }
    .nvy-open-search input {
        padding: 10px;
        font-size: 14px;
    }
    .nvy-open-search svg.icon--close {
        right: 6px;
        top: 9px;
    }
}