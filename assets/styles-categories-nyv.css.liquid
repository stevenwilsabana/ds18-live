.shopify-section.categories-nvy {
    padding: 30px 0;
}

.shopify-section.categories-nvy .categories-nvy__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.shopify-section.categories-nvy .categories-nvy__container h3 {
    color: #345d61;
    text-align: center;
    font-family: Montserrat, serif !important;
    font-weight: 700;
    font-size: 25px;
    line-height: 30px;
    margin-bottom: 20px;
}

.shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 1400px;
    margin: auto;
    padding: 0 30px;
    gap: 15px;
}

.shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    overflow: hidden;
    background-image: url('https://cdn.shopify.com/s/files/1/0018/0142/0861/files/imagen-lateral-der-banner-secun.png');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    color: white;
    max-height: 140px;
}

.shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie a .categorie-imagen {
    width: 50%;
}

.shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie a .categorie-imagen img {
    width: 150%;
    max-width: 130%;
    position: relative;
    right: 40%;
}

.shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie a p.categorie-name {
    width: 50%;
    text-align: center;
    font-family: Montserrat, serif !important;
    font-weight: bold;
    font-size: 17px;
    line-height: 22px;
    padding-right: 10px;
    margin: 0;
}

@media only screen and (min-width: 768px){
    .shopify-section.categories-nvy {
        padding: 50px 0;
    }

    .shopify-section.categories-nvy .categories-nvy__container h3 {
        font-size: 40px;
        line-height: 45px;
        margin-bottom: 30px;
    }

    .shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content {
        gap: 20px;
        flex-wrap: wrap;
        flex-direction: row;
    }
    
    .shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie {
        width: calc(50% - 20px);
    }

    .shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie:last-child {
        width: calc(100% - 20px);
    }

    .shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie a {
        max-height: 250px;
    }

    .shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie:last-child .categorie-imagen img  {
        top: 100px;
    }
    
    .shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie a p.categorie-name {
        font-size: 25px;
        line-height: 30px;
    }

    .shopify-section.categories-nvy .categories-nvy__container .categories-nvy__content .categorie a .categorie-imagen img {
        max-width: 115%;
        right: 25%;
    }
}