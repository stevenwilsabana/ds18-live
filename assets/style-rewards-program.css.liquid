/* New banner principal */

section#shopify-section-main-banner-growave {
    overflow: hidden;
    position: relative;
}

img.main-banner-rewards__background {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.main-banner-rewards {
    background: hsl(0deg 0% 0% / 85%);
    position: relative;
}

.main-banner-rewards__container {
    display: grid;
    justify-content: center;
    align-items: center;
    max-width: 400px;
    margin: 0 auto;
    padding: 40px 30px 60px;
}

.main-banner-rewards__imagen {
    width: 90%;
    margin: 10px auto 25px;
}

.main-banner-rewards__text p, .main-banner-rewards__text h3  {
    color: white;
    text-align: center;
    margin-bottom: 0;
}

.main-banner-rewards__text {
    display: flex;
    flex-direction: column;
}

.main-banner-rewards__container-buttons {
    display: flex;
    flex-direction: column;
}

.main-banner-rewards__container-buttons button {
    border: 1px solid white;
    padding: 15px 30px 10px;
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
    box-sizing: border-box;
    transition: all .3s ease-out;
}

.main-banner-rewards__button-join {
    margin-bottom: 20px;
    background: white;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    color: black;
}

.main-banner-rewards__button-login {
    color: white;
}

.main-banner-rewards__text-title {
    font-size: 25px;
    font-weight: bold;
}

.main-banner-rewards__text-parrafo {
    font-size: 15px;
    line-height: 20px;
    margin-bottom: 30px!important;
}

@media only screen and (min-width: 768px){

    .main-banner-rewards__container {
        grid-template-columns: 40% 50%;
        justify-content: space-around;
        padding: 130px 15px 145px;
        max-width: 1330px;
    }

    .main-banner-rewards__imagen {
        width: 100%;
        margin: 0;
    }

    .main-banner-rewards__container-buttons {
        flex-direction: row;
        justify-content: center;
    }

    .main-banner-rewards__container-buttons button {
        width: 150px;
    }

    .main-banner-rewards__button-join {
        margin-right: 20px;
        margin-bottom: 0;
    }

    .main-banner-rewards__text-parrafo {
        margin-bottom: 25px;
    }
}

@media only screen and (min-width: 1000px){
    .main-banner-rewards__container {
        grid-template-columns: 35% 40%;
    }
    
    .main-banner-rewards__text-title {
        font-size: 37px;
    }

    .main-banner-rewards__text p, .main-banner-rewards__text h3  {
        color: white;
        text-align: left;
        margin-bottom: 0;
    }

    .main-banner-rewards__text-parrafo {
        font-size: 20px;
        line-height: 30px;
        margin-bottom: 40px!important
    }

    .main-banner-rewards__container-buttons {
        justify-content: flex-start
    }
    
    .main-banner-rewards__container-buttons button.main-banner-rewards__button-login:hover {
        border-color: white;
        color: black;
        background: white;
    }

    .main-banner-rewards__container-buttons button.main-banner-rewards__button-join:hover {
        background: #282828;
        color: #ffffff;
    }
}



