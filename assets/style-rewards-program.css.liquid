/* Estilos Loader Global */


section#container-information-global__growave.disable-section-rewards {
    display: none;
}

div#loader-account-login-growave > div {
    min-height: 500px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 50px;
}


div#loader-account-login-growave > div .icon-loader {
    height: 40px;
    width: 40px;
    border: #e5e5e5 solid 5px;
    border-top: #000000 solid 5px;
    border-radius: 100%;
    display: block;
    animation: spin 1s linear infinite;
    margin-bottom: 20px;
}
 
@keyframes spin {
  0% {transform:rotate(0deg)}
  100% {transform:rotate(360deg)}
}


