/* DYNO RESULTS */

.dyno-results-v2__items--block-hidden {
    display: none;
}

.dyno-results-v2__container {
    max-width: 1400px!important;
    padding-left: 15px;
    padding-right: 15px;
    margin: auto;
    padding-top: 20px;
    margin-top: 15px;
    border-top: red solid 1px;
}


.dyno-results-v2__items {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.dyno-results-v2__item {
    margin-bottom: 30px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;    
}

.dyno-results-v2__item:last-child {
    margin-bottom: 0;
}

.dyno-results-v2__item h5 {
    width: 100%;
    text-align: center;
    font-size: 20px;
    line-height: 30px;
    margin: 0;
    margin-bottom: 5px;
}

.dyno-results-v2__item img {
    width: 100%;
}

.dyno-results-v2__item .dyno-results-v2__item--content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px 5px;
}

.dyno-results-v2__item .dyno-results-v2__item--content * {
    font-size: 15px!important;
    text-align: center;
}

.dyno-results-v2__item .dyno-results-v2__item--content p {
    margin: 3px 0;
}


@media only screen and (min-width: 740px){
    .dyno-results-v2__container {
        padding-top: 50px;
    }
    
    .dyno-results-v2__heading {
        margin-bottom: 30px;
    }
    
    .dyno-results-v2__items {
        flex-direction: row;
        flex-wrap: wrap;
        align-items: flex-start;
    }
    
    .dyno-results-v2__item {
        width: 50%;
        padding: 20px;
        margin-bottom: 10px;
    }

    .dyno-results-v2__item h5 {
        font-size: 25px;
        line-height: 35px;
        margin-bottom: 10px;
    }
}