.container-general-prices,
.shipsFreeToday,
/*.product-form__buy-buttons,*/
shopify-payment-terms {
 display: none!important;
}

section.container-sold-out-products {
    width: 100%;
}

section.container-sold-out-products h6{
    font-size: 20px;
    text-align: center;
    color: red;
    margin: 0;
    margin-bottom: 5px;
}

section.container-sold-out-products p {
    color: red;
    text-align: center;
    margin: 0;
}

section.container-sold-out-products .container-sold-out-products__content {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20px;
    margin-top: 10px;
    justify-content: center;
}

section.container-sold-out-products .container-sold-out-products__content product-item.product-item {
    padding: 10px;
    border: #efefef solid 1px;
    border-radius: 5px;
    margin: 5px;
    width: calc(50% - 10px);
}

section.container-sold-out-products .container-sold-out-products__content product-item.product-item .product-item-meta__title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 5px;
    font-size: 13px;
    line-height: 20px;
}

section.container-sold-out-products .container-sold-out-products__content product-item.product-item .jdgm-prev-badge__text {
    display: none;
}

section.container-sold-out-products button.button.button--outline.button--text.button--full.hidden-touch {
    background: red;
    border: red solid 1px;
}

section.container-sold-out-products button.button.button--outline.button--text.button--full.hidden-touch > span {
    color: white;
}

.container-back-in-stock__klaviyo a {
    background: red;
    color: white!important;
}

@media only screen and (min-width: 801px){
    section.container-sold-out-products .container-sold-out-products__content product-item.product-item  {
        width: calc(33.333% - 10px);
    }
}