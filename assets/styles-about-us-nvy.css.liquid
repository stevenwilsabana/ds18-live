.shopify-section.about_us_banners {
   /*border: red solid 1px;*/
}

.shopify-section.about_us_banners * {
   font-family: Montserrat, serif !important;
}

.about_us_banners__container {
   display: flex;
   flex-direction: column;
   padding: 0px 20px 50px;
}

.about_us_banners__container > h2 {
   font-weight: bold;
   text-align: center;
   font-size: 30px;
   letter-spacing: 0;
   line-height: 35px;
   width: 100%;
   margin: 0;
   padding: 0px 0px 30px;
}

.about_us_banners__content {
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   gap: 30px;
}

.about_us_banners__banner {
   width: 100%;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
}

.about_us_banners__banner-imagen {
   width: 100%;
   
}

.about_us_banners__banner-imagen img {
   width: 100%;
}

.about_us_banners__banner-imagen img.imagen.imagen--desktop {
   display: none;
}

.about_us_banners__banner-imagen img.imagen.imagen--mobile {
   width: 100%;
}

.about_us_banners__banner-details {
   width: 100%;
   display: flex;
   flex-direction: column;
   gap: 10px;
   padding: 15px 0;
   justify-content: flex-start;
   align-items: flex-start
}


.about_us_banners__banner-details h5,
.about_us_banners__banner-details p,
.about_us_banners__banner-details a {
   margin: 0;
   width: 100%;
}

.about_us_banners__banner-details h5 {
   font-size: 25px;
   line-height: 30px;
   font-weight: 500
}

.about_us_banners__banner-details div {
   display: flex;
   flex-direction: column;
   gap: 10px;
}

.about_us_banners__banner-details p {
   font-weight: 300;
   text-align: left;
   font-size: 13px;
}

.about_us_banners__banner-details a {
   font-weight: 500;
   text-align: center;
   font-size: 14px;
   border: black solid 1px;
   width: auto;
   padding: 10px 30px;
   margin-top: 10px;
}

@media only screen and (min-width: 1300px) {
   
   .shopify-section.about_us_banners {
      display: flex;
      justify-content: center;
      align-items: center;
   }
   
   .about_us_banners__container {
      max-width: 1300px;
      padding: 0px 30px 100px;
   }

   .about_us_banners__container > h2 {
      font-size: 50px;
      line-height: 55px;
      padding: 0px 0px 50px;
   }

   .about_us_banners__content {
      flex-direction: row;
      flex-wrap: wrap;
      align-items: stretch;
   }
   
   .about_us_banners__banner-imagen img.imagen.imagen--mobile {
      display: none;
   }

   .about_us_banners__banner-imagen img.imagen.imagen--desktop {
      width: 100%;
      display: block;
      filter: grayscale(100%) contrast(1.2) brightness(0.9);
      transition: all .3s;
   }
   
   .about_us_banners__banner--middle_width {
      width: calc((100% - 30px) / 2);
   }

   .about_us_banners__banner--full_width {
      width: 100%;
   }

   .about_us_banners__banner {
      height: auto;
      justify-content: stretch;
   }

   .about_us_banners__banner:hover img.imagen.imagen--desktop {
      filter: none;
   }

   .about_us_banners__banner-details {
      height: 100%;
      padding: 20px 0;
      gap: 20px;
   }

   .about_us_banners__banner-details h5 {
       font-size: 35px;
       line-height: 40px;
   }

   .about_us_banners__banner-details p {
      font-size: 15px;
   }

   .about_us_banners__banner-details a {
      margin-top: auto;
      transition: all .3s;
   }

   .about_us_banners__banner-details a:hover {
      background: black;
      color: white;
   }
  
}