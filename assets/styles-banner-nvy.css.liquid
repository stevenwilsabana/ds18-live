.shopify-section.banner-secundario-nvy {
    padding: 30px 0;
    overflow: hidden;
}


.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    background-image: url('https://cdn.shopify.com/s/files/1/0018/0142/0861/files/imagen-lateral-der-banner-secun.png');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--details {
    padding: 40px 30px 40px;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--details h3 {
    text-align: center;
    font-family: Montserrat, serif !important;
    font-weight: 500;
    font-size: 25px;
    line-height: 30px;
    margin-bottom: 15px;
}

.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--details p {
    font-family: Montserrat, serif !important;
    text-align: center;
    font-size: 15px;
    line-height: 25px;
    margin: 0;
}

.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .imagen-absoluted {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 0px;
}

.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .imagen-absoluted img {
    width: 80%;
    max-width: 400px;
}

.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--imagen img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top right;
}

.shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--imagen {
    display: none;
}


@media only screen and (min-width: 1100px) {
    .shopify-section.banner-secundario-nvy {
        padding: 50px 0;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--imagen {
        display: block;
        right: 0;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--details {
        left: 0;
        background-image: url('https://cdn.shopify.com/s/files/1/0018/0142/0861/files/imagen-lateral-der-banner-secun.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        height: 100%;
        padding-right: 18%;
        display: flex;
        justify-content: center;
        align-items: flex-end;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--details .container-details-nvy {
        width: 80%;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container {
        flex-direction: row;
        overflow: hidden;
    }
    
    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario {
        position: absolute;
        width: 50%;
        height: 90%;
    }
    
    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .imagen-absoluted {
        position: relative;
        z-index: 1;
        height: 100%;
    }
    
    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .imagen-absoluted img {
        max-width: 100%;
        width: 40%;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container {
        background: transparent;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--imagen img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--details h3 {
        text-align: left;
    }
    
    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario--details p {
        text-align: left;
    }
}


@media only screen and (min-width: 1400px){
    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .imagen-absoluted img {
        width: 35%;
    }

    .shopify-section.banner-secundario-nvy .banner-secundario-nvy__container .item-banner-secundario {
        height: 70%;
    }
}